@model SearchViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div id="page-wrapper">
    <div class="search-overlay idle">
        <div class="wrapper">
            <div class="inner animate move_from_bottom_short idle">
                <div class="logo">
                    <img src="~/img/logo.png">
                </div>
                <h2>Намери своят дом</h2>
                <form method="post">                    
                    <div class="form-group">
                        <select asp-for="RentOrSale" asp-items="Html.GetEnumSelectList<RentOrSaleEnum>()" name="RentOrSale" multiple title="Търси имот?" class="animate" data-transition-parent=".dropdown-menu">
                        </select>
                    </div>
                    <div class="form-group">
                        <select asp-for="TypeProparty" asp-items="Html.GetEnumSelectList<TypePropartyEnum>()" name="TypeProparty" multiple title="Тип на имота?" class="animate" data-transition-parent=".dropdown-menu">
                        </select>
                    </div>
                    <!--end .form-group-->
                    <div id="locationField">
                        <div class="form-group">
                            <div class="input-group location">
                                <input asp-for="Location" asp- type="text" onfocus="geolocate()" class="form-control" id="autocomplete" placeholder="Къде?" name="Location">
                                <span asp-validation-for="Location" class="input-group-btn">
                                    <button class="btn btn-default animate" type="button">
                                        <i class="fa fa-map-marker geolocation"
                                           data-toggle="tooltip"
                                           data-placement="bottom"
                                           title="Find my position"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- /.form-group -->
                    <div class="form-groupt">
                        <button type="submit" class="btn btn-primary">Търси</button>
                    </div>
                    <!--end .form-group-->
                </form>
            </div>
            <div class="circle">
                <div class="element"></div>
            </div>
        </div>
    </div>
    <div class="background opacity-50">
        <img src="~/img/688_fyhgughdetails_all_buildings.jpg">
    </div>
</div>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDdiI-QB4yQBI7QpMA1phbgYSVQe4bVpYU&libraries=places&callback=initAutocomplete"
        async defer></script>