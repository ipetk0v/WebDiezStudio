@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" id="name" name="name" placeholder="Име">
            </div>
            <!--end .form-group-->
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" id="email" name="email" placeholder="Имейл">
            </div>
            <!--end .form-group-->
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" id="Password" name="Password" placeholder="Парола">
            </div>
            <!--end .form-group-->
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Потвърди парола    ">
            </div>
            <!--end .form-group-->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            <!--end .form-group-->
        </form>
    </div>
    <div class="col-md-3"></div>    

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

