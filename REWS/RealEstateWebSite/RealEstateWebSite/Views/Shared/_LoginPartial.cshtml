@using Microsoft.AspNetCore.Identity
@using RealEstateWebSite.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-default navbar-btn navba" asp-controller="Manage" asp-action="Index" title="Профил">Hello @UserManager.GetUserName(User)!</button>
            </li>
            <li>
                <button type="submit" class="btn btn-default navbar-btn navba">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <form method="post" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-default navbar-btn navba" asp-controller="Account" asp-action="Register" title="Регистрация">Registration</button>
            </li>
            <li>
                <button type="submit" class="btn btn-default navbar-btn navba" asp-controller="Account" asp-action="Login" title="Влез">Log in</button>
            </li>
        </ul>
    </form>
}
